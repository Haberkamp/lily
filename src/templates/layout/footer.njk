{% macro items(items) %}

<footer class="bg-grey-200 py-3">
    <div class='container d-flex justify-content-between align-items-center'>
        {% block footer_logo %}
            <a href='#' class="link-dark text-decoration-none">
                <img src='assets/favicon/favicon.svg' alt='' class='rounded-circle' data-bs-toggle='tooltip' data-bs-placement='top' title='Go back to top'>
            </a>
        {% endblock %}

        <ul class='nav'>
            {% for item in items %}
                <li class='nav-item'>
                    <a href='{{ item.path }}' class='nav-link link-dark rounded'>{{ item.content }}</a>
                </li>
            {% endfor %}
        </ul>
    </div>
</footer>

{% endmacro %}

